<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_text_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_text_view</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/text_size_text_view</item>
    </style>

    <style name="style_text_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_text_view</item>
        <item name="android:layout_marginTop">@dimen/text_size_text_view</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>

    </style>

    <style name="style_text_custom_restaurant">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_text_view</item>
        <item name="android:layout_marginEnd">@dimen/margin_top</item>
        <item name="android:layout_marginStart">@dimen/margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/drawable_padding</item>

        <item name="android:gravity">start</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>


    </style>
</resources>
