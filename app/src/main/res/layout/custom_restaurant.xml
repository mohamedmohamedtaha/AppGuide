<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_show_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_wight"
        android:layout_margin="@dimen/margin_top"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name_restaurant"
        style="@style/style_text_custom_restaurant"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_text_view"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address_restaurant"
        style="@style/style_text_custom_restaurant"
        android:drawableStart="@drawable/ic_location" />

    <TextView
        android:id="@+id/tv_phone_restaurant"
        style="@style/style_text_custom_restaurant"
        android:drawableStart="@drawable/ic_phone" />
</LinearLayout>