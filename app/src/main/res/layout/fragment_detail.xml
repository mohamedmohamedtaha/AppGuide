<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.manasatpc.appguide.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_phone_mosq"
            style="@style/style_text_main" />

        <TextView
            android:id="@+id/tv_address_mosq"
            style="@style/style_text_description" />
    </LinearLayout>

</ScrollView>
